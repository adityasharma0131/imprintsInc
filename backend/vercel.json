{
    "version": 2,
    "builds": [
        {
            "src": "routes/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "views/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/routes/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/views/index.js"
        }
    ]
}